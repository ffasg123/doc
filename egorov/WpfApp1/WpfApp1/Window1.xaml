<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid Background="#FF7FCDD2" >
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" >
            <TextBox Name="TxtLogin" Width="300" Height="30"   />
            <TextBox Name="TxtPassword" Width="300" Height="30" TextChanged="TxtPassword_TextChanged"   />
            <Button Content="Авторизоваться" 
                    Width="300" 
                    Height="40" 
                    Background="#FF4CAF50" 
                    Foreground="White" 
                    FontSize="16" 
                    Click="Button_Click" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
